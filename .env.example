# Frontend
# Quando vazio, o frontend usa o mesmo origin. Para desenvolvimento local, pode apontar para http://localhost:3000
VITE_API_BASE_URL=http://localhost:3000

# Azure OpenAI
AZURE_OPENAI_ENDPOINT_1=https://inqualidademiniaec.openai.azure.com/
AZURE_OPENAI_API_KEY_1=your_azure_key_here
AZURE_OPENAI_API_VERSION_1=2024-08-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME_1=gpt-4o-mini
# Variáveis canônicas (preferenciais); o servidor fará fallback para *_1 se estas não estiverem setadas
AZURE_OPENAI_ENDPOINT=https://inqualidademiniaec.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_key_here
AZURE_OPENAI_API_VERSION=2023-05-15
AZURE_OPENAI_EMBED_DEPLOYMENT=text-embedding-3-small

# Postgres (Docker Compose)
POSTGRES_DB=dialogai
POSTGRES_USER=dialogai
POSTGRES_PASSWORD=dialogai_secret

# Conexão usada pelo app (container) para acessar o Postgres (host interno "postgres")
DATABASE_URL=postgres://dialogai:dialogai_secret@postgres:5432/dialogai

# App server
PORT=3000

# Feature flags (opcional)
# Defina como "true" para usar a rota chat/completions em vez de responses
AZURE_USE_CHAT_COMPLETIONS=false
# Defina como "true" apenas para depuração quando um proxy corporativo quebrar TLS
SSL_INSECURE_SKIP_VERIFY=false

# RAG e Upload (parametrizável)
RAG_CHUNK_TOKENS=800
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=8
UPLOAD_MAX_MB=10
UPLOAD_ALLOWED_MIME=application/pdf,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain
EMBEDDING_DIM=1536
GRAPH_RAG_ENABLED=true

# Autenticação
# Segredo para assinar JWT (defina um valor forte em produção)
JWT_SECRET=change_me_in_production
# Política de senha (mínimo de caracteres)
PASSWORD_MIN_LENGTH=8